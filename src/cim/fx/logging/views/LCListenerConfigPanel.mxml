<mx:TitleWindow xmlns:mx="http://www.adobe.com/2006/mxml"
    title="Configure Connection" 
	width="400" height="200" layout="vertical" showCloseButton="true" close="onCancelClick()">
	
	<mx:Text width="100%" text="Enter the name of the connection you want to listen on. " />
	<mx:TextInput width="100%" id="connectionNameTextInput" enter="onSaveClick()"/>
	<mx:HBox width="100%">
		<mx:Button label="Cancel" click="onCancelClick()" />
		<mx:Spacer width="100%"/>
		<mx:Button label="Save" click="onSaveClick()" />
	</mx:HBox>
	
	<mx:Script>
		<![CDATA[
			import mx.managers.PopUpManager;
			import mx.core.Application;
			import cim.fx.logging.logBook.LogBookMain;
			
			private function onCancelClick():void{
				PopUpManager.removePopUp(this);
			}
			
			private function onSaveClick():void{
				LogBookMain(Application.application).setConnectionName(connectionNameTextInput.text);
				PopUpManager.removePopUp(this);
			}
			
		]]>
	</mx:Script>
</mx:TitleWindow>
